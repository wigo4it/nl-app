<script type="text/javascript" src="@Url.Content("/scripts/offline.min.js")"></script>

<script type="text/javascript">
    function setUpClass() {
        $('body').removeClass("offline");
    };

    function setDownClass() {
        $('body').addClass("offline");
    };

    Offline.options = {
        checkOnLoad: true,
        interceptRequests: true,
        reconnect: {
            initialDelay: 3,
            delay: 10
        },
        requests: false,
        game: false
    }

    Offline.on('up', setUpClass);
    Offline.on('down', setDownClass);
</script>